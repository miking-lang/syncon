// dep: haskell/base

syncon haskellDataDecl: Decl =
  "data" n:UIdent arg:Ident*
  ("=" c:HaskellConstr
   ("|" c2:HaskellConstr)*)?

syncon haskellConstrDecl: HaskellConstr =
  c:UIdent (strict:"!"? t:Type)*

syncon haskellRecordConstrDecl: HaskellConstr =
  c:UIdent "{"
  f:Ident "::" strict:"!"? t:Type
  ("," f2:Ident "::" strict2:"!"? t2:Type)*
  "}"
