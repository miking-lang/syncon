                    , EmptyCase
                    , FlexibleContexts
                    , FlexibleInstances
                    , InstanceSigs
                    , MultiParamTypeClasses
                    , LambdaCase
                    , MultiWayIf
                    , NamedFieldPuns
                    , TupleSections
                    , DeriveFoldable
                    , DeriveFunctor
                    , DeriveGeneric
                    , DeriveLift
                    , DeriveTraversable
                    , DeriveDataTypeable
                    , GeneralizedNewtypeDeriving
                    , StandaloneDeriving
                    , BangPatterns
                    , KindSignatures
                    , TypeOperators
                    , OverloadedStrings
                    , ScopedTypeVariables
                    , TypeApplications
                    , ConstraintKinds
                    , PolyKinds
                    , RankNTypes
